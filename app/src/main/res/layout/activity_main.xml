<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
android:background="@drawable/cf"
    android:layout_height="match_parent"
    tools:context="com.example.android.identityverification.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/container">

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:padding="@dimen/small_padding"
                android:src="@drawable/home_pic"
                android:layout_weight="1"
                android:tint="@color/grey_3"
                android:id="@+id/home"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:padding="@dimen/small_padding"
                android:src="@drawable/verify_pic"
                android:layout_weight="1"
                android:tint="@color/grey_700"
                android:id="@+id/verify"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:padding="@dimen/small_padding"
                android:src="@drawable/more_pic"
                android:layout_weight="1"
                android:tint="@color/grey_700"
                android:id="@+id/more"
                />
        </LinearLayout>
</LinearLayout>
