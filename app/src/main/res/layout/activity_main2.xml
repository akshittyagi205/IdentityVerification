<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cf"
    tools:context="com.example.android.identityverification.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:id="@+id/card"
            app:cardCornerRadius="@dimen/spacing_xmedium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/image"
                    android:tint="@color/grey_700"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/text"
                    android:gravity="center"
                    android:text="Click Here To Scan Your Aadhaar"
                    android:textColor="@color/textColorDark" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:text="UID Number : "
            android:id="@+id/uidText"
            android:textColor="@color/textColorLight"
            android:fontFamily="serif"
            android:textSize="@dimen/text_medium" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginRight="@dimen/layout_medium_margin"
                android:layout_marginTop="@dimen/layout_medium_margin"
                android:text="12345667890"
                android:id="@+id/uid"
                android:textColor="@color/textColorLight"
                android:fontFamily="serif"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginLeft="@dimen/layout_medium_margin"
                android:layout_marginTop="@dimen/layout_medium_margin"
                android:text="Name : "
                android:id="@+id/nameText"
                android:textColor="@color/textColorLight"
                android:fontFamily="serif"
                android:textSize="@dimen/text_medium" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_small_margin"
                android:layout_marginRight="@dimen/layout_medium_margin"
                android:layout_marginTop="@dimen/layout_medium_margin"
                android:text="Akshit Tyagi"
                android:id="@+id/name"
                android:textColor="@color/textColorLight"
                android:fontFamily="serif"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/btn_rounded_green"
           android:textColor="@color/textColorLight"
           android:layout_margin="@dimen/fab_margin"
           android:padding="@dimen/fab_margin"
           android:text="Confirm"
           android:id="@+id/confirm"
           android:layout_gravity="center"
           android:textStyle="bold"
           />
    </LinearLayout>
</ScrollView>
