<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_A200"
    tools:context="com.example.android.identityverification.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="@dimen/spacing_xmedium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Click Here To Scan Your Aadhaar"
                    android:textColor="" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_medium_margin"
            android:text="Name : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="Year Of Birth : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="Gender : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="City : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="House : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="Street : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="Locality : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_medium_margin"
            android:layout_marginLeft="@dimen/layout_medium_margin"
            android:layout_marginRight="@dimen/layout_medium_margin"
            android:layout_marginTop="@dimen/layout_small_margin"
            android:text="Pincode : "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_very_small" />


    </LinearLayout>
</ScrollView>
