<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900"
    tools:context="com.example.android.identityverification.E_KYC_HomeActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/pic_1"
            android:tint="@color/textColorLight"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select Company"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_medium_margin"
            android:background="@color/textColorLight"
            android:entries="@array/country_arrays"
            android:padding="@dimen/layout_medium_margin"
            android:prompt="@string/company_name"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/textColorLight"
            android:textStyle="bold"
            android:background="@drawable/btn_rounded_green"
            android:text="Submit" />

    </LinearLayout>

</RelativeLayout>
